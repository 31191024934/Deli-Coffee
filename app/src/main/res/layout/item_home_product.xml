<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"

    >

    <LinearLayout
        android:id="@+id/radius1"
        android:layout_width="348dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:background="@drawable/radius_product"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_home_item_url"
                android:layout_width="115dp"
                android:layout_height="131dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/img_coffee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_item_productName"

                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="12dp"
                    android:text="Peppermint Mocha"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal"

                    >

                    <TextView
                        android:id="@+id/txt_home_item_price"
                        android:layout_width="174dp"
                        android:layout_height="43dp"

                        android:gravity="left|center"
                        android:text="50000"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/home_add"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"

                        android:background="@drawable/circle_black"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="20dp"

                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    <!-- ++++++++++++++++++++++++++++++ -->
</LinearLayout>