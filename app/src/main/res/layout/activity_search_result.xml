<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FFFCF4"
    android:orientation="vertical"
    tools:context=".activity.SearchEmpty">

    <LinearLayout
        android:id="@+id/Search_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/iconprevious"
            android:gravity="left|center"
            android:text="Search"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal">

            <EditText
android:id="@+id/searchResult_edt_search"
                android:layout_width="268dp"
                android:layout_height="match_parent"
                android:background="@drawable/search"
                android:drawableLeft="@drawable/iconsearch"
                android:gravity="left|center"
                android:hint="  Search"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/search_img_search_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/iconsearch" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView

            android:layout_marginTop="40dp"
            android:id="@+id/rvcHomeProduct_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            app:spanCount="1"
            >

        </androidx.recyclerview.widget.RecyclerView>




    </LinearLayout>


</LinearLayout>